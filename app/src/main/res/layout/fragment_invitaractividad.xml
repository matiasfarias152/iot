<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".invitaractividad">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="91dp"
        android:text="@string/unirseactividad"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/codigoinvitarTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/codigoinvitarTextView"
        android:layout_width="223dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="@string/codigoactividad"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnUnirseActividad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btnUnirseActividad"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginBottom="217dp"
        android:backgroundTint="@color/black"
        android:text="@string/unirse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codigoinvitarTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>